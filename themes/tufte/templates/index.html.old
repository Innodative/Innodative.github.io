{% extends "base.html" %}

{% block content %}
<section>
    <p class="intro">Welcome. Browse topics using the navigation above, or see the latest articles below.</p>
    
    {% if articles %}
    <h2>Recent Articles</h2>
    <ul class="article-list">
        {% for article in articles_page.object_list %}
        <li>
            <h2><a href="{{ SITEURL }}/{{ article.url }}">{{ article.title }}</a></h2>
            <p class="meta">{{ article.date.strftime('%B %d, %Y') }} Â· {{ article.category }}</p>
            {% if article.summary %}
            <p class="summary">{{ article.summary | striptags | truncate(200) }}</p>
            {% endif %}
        </li>
        {% endfor %}
    </ul>
    
    {% if articles_page.has_other_pages() %}
    <nav class="pagination">
        {% if articles_page.has_previous() %}
        <a href="{{ SITEURL }}/{{ articles_previous_page.url }}">&larr; Newer</a>
        {% endif %}
        
        Page {{ articles_page.number }} of {{ articles_paginator.num_pages }}
        
        {% if articles_page.has_next() %}
        <a href="{{ SITEURL }}/{{ articles_next_page.url }}">Older &rarr;</a>
        {% endif %}
    </nav>
    {% endif %}
    {% else %}
    <p>No articles yet. Start writing!</p>
    {% endif %}
</section>
{% endblock %}
